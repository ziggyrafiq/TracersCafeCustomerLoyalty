@model ZR.Infrastructure.ViewModels.CustomerVM

 
 


<form id="frmCustomer" asp-controller="CustomerNameTitles" asp-action="Upsert"
      class="row g-3 form-group  p-2 m-1"
       method="post"  
       autocomplete="off" enctype="multipart/form-data" novalidate=false>

    <div class="row p-2 m-1">
           <div class="col-md-12">
               <h1>Customer Name Title Form</h1>
            <input type="hidden" asp-for="CustomerTitle.Id" />
            
            
            @if (Model != null)
            {
                <h2 class="text-primary">Edit Customer Title @Model.CustomerTitle.Name</h2>
                //edit
                
            }
            else
            {
                <h2 class="text-primary">Add New Customer Name Title</h2>
            }
            

            <h3 class="text-capitalize">Please complete the form below</h3>
            @*@Html.AntiForgeryToken()*@
            

            <div asp-validation-summary="ModelOnly" class="col-md-12 control-label text-danger fw-bold"></div>
           </div>
       </div>
    <div class="row p-2 m-1">
        <div class="form-group col-md-12">
            <label asp-for="CustomerTitle.Name"></label>
            <input asp-for="CustomerTitle.Name" class="form-control" placeholder="First Name" />
            <span asp-validation-for="CustomerTitle.Name" class="text-danger control-label fw-bold"></span>
        </div>
    </div>
    
    <div class="row p-2 m-1">
        <div class="form-group col-md-4">
                       
            <div class="form-check">              
                    <input asp-for="CustomerTitle.IsActive" class="form-check-input" type="checkbox">
                <label class="form-check-label" asp-for="CustomerTitle.IsActive"></label>
            </div>           
        </div>
        <div class="form-group col-md-4">

            <div class="form-check">
                <input asp-for="CustomerTitle.IsSoftDeleted" class="form-check-input" type="checkbox">
                <label class="form-check-label" asp-for="CustomerTitle.IsSoftDeleted"></label>
            </div>
        </div>
        <div class="form-group col-md-4">

            <div class="form-check">
                <input asp-for="CustomerTitle.IsHardDeleted" class="form-check-input" type="checkbox">
                <label class="form-check-label" asp-for="CustomerTitle.IsHardDeleted"></label>
            </div>
        </div>
    </div>

    <button class="btn btn-primary" type="submit">Save Changes</button>

    </form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}